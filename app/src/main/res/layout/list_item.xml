<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/cvList"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    app:cardCornerRadius="10dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

        <ImageView
                android:id="@+id/ivProduk"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp" />

        <TextView
                android:id="@+id/tvNamaProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="128dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="27dp"
                android:layout_toEndOf="@id/ivProduk"
                android:layout_toRightOf="@id/ivProduk"
                android:text="Menu Jualanku"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/tvHargaProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tvNamaProduk"
                android:layout_alignParentTop="true"
                android:layout_marginTop="75dp"
                android:text="Harga"
                android:textSize="20sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>


